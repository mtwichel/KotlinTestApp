<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.marcustwichel.recipefinder.recipefinder.fragments.ListFragment">

    <Button
        android:id="@+id/move_to_kitchen_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Move Checked to Kitchen"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/add_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Add grocery item here"
        android:imeOptions="actionDone"
        android:inputType="textPersonName" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
